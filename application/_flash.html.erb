<% if notice %>
  <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline"><%= notice %></span>
    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3 text-blue-500 hover:text-blue-700" aria-label="Close" onclick="this.parentElement.style.display='none';">
      &times;
    </button>
  </div>
<% end %>

<% if alert %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline"><%= alert %></span>
    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3 text-red-500 hover:text-red-700" aria-label="Close" onclick="this.parentElement.style.display='none';">
      &times;
    </button>
  </div>
<% end %>

<div class="container mx-auto p-4">
    <div class="bg-white shadow-md rounded-lg p-6 mb-4">
      <h2 class="text-2xl font-bold mb-2"><%= event.title %></h2>
      <p class="text-gray-700 mb-2"><%= event.description %></p>
      <p class="text-gray-600 mb-2">Category: <%= event.category %></p>
      <p class="text-gray-600 mb-2">Status: <%= event.status %></p>
      <p class="text-gray-600 mb-2">Event Start: <%= event.event_started_at %></p>
      <p class="text-gray-600 mb-2">Event End: <%= event.event_ended_at %></p>
      <p class="text-gray-600 mb-2">Recruitment Start: <%= event.recruit_started_at %></p>
      <p class="text-gray-600 mb-2">Recruitment End: <%= event.recruit_ended_at %></p>
      <p class="text-gray-600 mb-2">Timezone: <%= event.timezone %></p>
    </div>
</div>

<div class="grid grid-cols-3 items-center py-2 border-t">
  <!-- 名前 -->
  <div class="col-span-1 my-auto">
    <%= cat.name %>
  </div>

  <!-- 年齢 -->
  <div class="col-span-1 my-auto">
    <%= cat.age %>
  </div>

  <!-- 編集・削除ボタン -->
  <div class="col-span-1">
    <div class="flex justify-end space-x-2">
      <%= link_to "編集", edit_cat_path(cat), class: "bg-blue-500 hover:bg-blue-600 text-white text-sm font-bold py-1 px-3 rounded" %>
      <%= button_to "削除", cat, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white text-sm font-bold py-1 px-3 rounded" %>
    </div>
  </div>
</div>
